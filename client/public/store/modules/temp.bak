// actions
const actions = {
    userSetInfo ({ commit, state },user){
        commit("USER_SET_INFO",user);
    },

}
const mutations = {
    USER_SET_INFO (state,user) {
        user.validateTime = +new Date();
        state.user = user;
    },
}

export default {
    state,
    getters,
    actions,
    mutations
}
