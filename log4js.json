{
    "appenders": {
        "access": {
            "type": "dateFile",
            "filename": "log/http-access.log",
            "pattern": ".yyyy-MM-dd",
            "compress": true
        },
        "operation": {
            "type": "dateFile",
            "filename": "log/operation.log",
            "pattern": ".yyyy-MM-dd",
            "compress": true
        },
        "sql": {
            "type": "dateFile",
            "filename": "log/sql.log",
            "pattern": ".yyyy-MM-dd",
            "compress": true
        },
        "out": {
            "type": "stdout"
        },
        "app": {
            "type": "file",
            "filename": "log/application.log",
            "maxLogSize": 2097152,
            "numBackups": 3,
            "level": "debug"
        }
    },
    "categories": {
        "http": {
            "appenders": [
                "access"
            ],
            "level": "info"
        },
        "op": {
            "appenders": [
                "out",
                "operation"
            ],
            "level": "debug"
        },
        "sql": {
            "appenders": [
                "out",
                "sql"
            ],
            "level": "info"
        },
        "default": {
            "appenders": [
                "out",
                "app"
            ],
            "level": "trace"
        }
    },
    "pm2": true,
    "pm2InstanceVar": "INSTANCE_ID"
}
