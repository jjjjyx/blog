{
    "appenders": {
      "access": {
        "type": "dateFile",
        "filename": "log/access.log",
        "pattern": "-yyyy-MM-dd",
        "category": "http",
        "maxLogSize": 10485760,
        "numBackups": 3,
        "compress": true
      },
      "out": {
        "type": "stdout"
      },
      "appFile": {
        "type": "file",
        "filename": "log/app.log",
        "pattern": "yyyy-MM-dd-hh",
        "maxLogSize": 10485760,
        "numBackups": 3,
        "compress": true
      },
      "errorFile": {
        "type": "file",
        "filename": "log/errors.log",
        "maxLogSize": 10485760,
        "compress": true
      },
      "errors": {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": "errorFile"
      },
      "console" : {
        "type": "console"
      }
    },
    "categories": {
      "default": { "appenders": [ "out", "appFile", "errors" ], "level": "DEBUG" },
      "http": { "appenders": [ "access"], "level": "DEBUG" }
    },
    "replaceConsole": true
  }
