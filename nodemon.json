{
    "restartable": "rs",
    "ignore": [
        ".git",
        "doc",
        "src/views",
        "src/webapp",
        "webpack",
        "static",
        "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "watch": [
        "app.js",
        "src/utils.js",
        "src/before-listen.js",
        "src/common/",
        "src/models/",
        "src/routers/"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json"
}
